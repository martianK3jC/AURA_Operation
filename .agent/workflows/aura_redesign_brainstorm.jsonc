    // ============================================================================
    // CRITICAL QUESTION: WHERE TO PUT RECOMMENDATIONS/ALERTS?
    // ============================================================================
    "alerts_and_recommendations_placement": {
        "research_findings": {
            "best_practices": [
                "Top-left or top-right corner for critical alerts (EOC standard)",
                "Color-coded severity (red=critical, orange=warning, yellow=info)",
                "Dedicated alert section/widget for grouping",
                "Persistent notification bell/icon in header with count badge",
                "Toast notifications for real-time events (auto-dismiss)",
                "Modal for critical alerts requiring immediate action"
            ],
            "avoid": [
                "Burying alerts in scrollable content",
                "Alert fatigue from too many notifications",
                "Inconsistent placement across different views"
            ]
        },
        "recommended_approach": {
            "strategy": "Multi-layered alert system with context-aware placement",
            "layer_1_global_header": {
                "location": "Top-right of screen (always visible)",
                "components": [
                    "System status indicator (Nominal/Alert with color)",
                    "Alert bell icon with count badge",
                    "Click to open alert dropdown/panel"
                ],
                "behavior": "Persistent across all sidebar sections"
            },
            "layer_2_alert_panel": {
                "location": "Slide-out panel from right side OR dedicated sidebar section",
                "trigger": "Click alert bell icon OR navigate to 'Alerts' in sidebar",
                "content": [
                    "List of all active alerts (grouped by severity)",
                    "Each alert shows: type, location, message, time, actions",
                    "Filter by severity, location, or status",
                    "Resolve/acknowledge buttons"
                ],
                "design": "Glass-morphism panel with backdrop blur, max-height with scroll"
            },
            "layer_3_contextual_alerts": {
                "description": "Show relevant alerts within each module",
                "examples": [
                    "Population module → Show overcrowding alerts for specific zones",
                    "Heatmap module → Highlight congestion hotspots with alert markers",
                    "Surveillance module → Show camera-specific incident alerts",
                    "Staff Allocation → Show understaffing warnings"
                ],
                "design": "Inline alert cards within module content, less prominent than global alerts"
            },
            "layer_4_ai_recommendations": {
                "location": "Bottom-right corner OR dedicated 'Recommendations' tab in alert panel",
                "trigger": "AI analyzes data and generates suggestions",
                "content": [
                    "Recommendation cards with icon, title, description, confidence score",
                    "Actions: 'Accept', 'Dismiss', 'View Details'",
                    "Auto-dismiss after 30s if not interacted with (move to history)"
                ],
                "design": "Distinct from alerts (use amber/gold theme to match AI assistant)",
                "examples": [
                    "'Deploy 2 additional staff to Security Zone 2 (85% confidence)'",
                    "'Predicted peak in 30 minutes - consider opening Gate B12'",
                    "'Unusual activity detected in Retail Area - review Camera 08'"
                ]
            },
            "layer_5_toast_notifications": {
                "location": "Top-center or bottom-right (existing ToastContext)",
                "trigger": "Real-time events (new alert, task completed, system update)",
                "behavior": "Auto-dismiss after 3-5 seconds, non-blocking",
                "use_cases": [
                    "Alert resolved",
                    "Staff assignment updated",
                    "System status changed",
                    "New recommendation available"
                ]
            }
        },
        "final_recommendation": {
            "primary_alerts": "Top-right header with bell icon + slide-out panel",
            "ai_recommendations": "Bottom-right floating cards (similar to chatbot button placement)",
            "contextual_info": "Inline within each module",
            "real_time_events": "Toast notifications (already implemented)",
            "rationale": [
                "Separates critical alerts (safety/security) from AI suggestions (optimization)",
                "Maintains clean interface without overwhelming users",
                "Follows EOC dashboard best practices",
                "Leverages existing ToastContext infrastructure",
                "Provides flexibility for users to focus on specific alert types"
            ]
        }
    },
